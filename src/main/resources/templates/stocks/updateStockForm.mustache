{{>layout/header}}

<h1>주식 종목 수정</h1>
<hr>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">주식 종목 번호</label>
                <input type="text" class="form-control" id="id" value="{{stock.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="stockName">주식 종목</label>
                <input type="text" class="form-control" id="stockName" value="{{stock.stockName}}" readonly>
            </div>
            <div class="form-group">
                <label for="sector">섹터</label>
                <input type="text" class="form-control" id="sector" value="{{stock.sector}}" readonly>
            </div>
            <div class="form-group">
                <label for="currentPrice">현재가</label>
                <input type="number" class="form-control" id="currentPrice" value="{{stock.currentPrice}}">
            </div>
            <div class="form-group">
                <label for="allTimeHighPrice">52주 최고가</label>
                <input type="number" class="form-control" id="allTimeHighPrice" value="{{stock.allTimeHighPrice}}">
            </div>
            <div class="form-group">
                <label for="allTimeLowPrice">52주 최저가</label>
                <input type="number" class="form-control" id="allTimeLowPrice" value="{{stock.allTimeLowPrice}}">
            </div>
            <div class="form-group">
                <label for="priceEarningRatio">주가 수익 비율</label>
                <input type="number" step="0.01" class="form-control" id="priceEarningRatio" value="{{stock.priceEarningRatio}}">
            </div>
            <div class="form-group">
                <label for="estimatePER">추정 주가 수익 비율</label>
                <input type="number" step="0.01" class="form-control" id="estimatePER" value="{{stock.estimatePER}}">
            </div>
            <div class="form-group">
                <label for="priceBookValueRatio">주가 순자산 비율</label>
                <input type="number" step="0.01" class="form-control" id="priceBookValueRatio" value="{{stock.priceBookValueRatio}}">
            </div>
            <div class="form-group">
                <label for="dividendRate">배당 수익률</label>
                <input type="number" step="0.01" class="form-control" id="dividendRate" value="{{stock.dividendRate}}">
            </div>
        </form>
<!--        <a href="/" role="button" class="btn btn-secondary">취소</a>-->
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
<!--        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>-->
    </div>
</div>

{{>layout/footer}}